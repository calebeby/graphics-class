---
import SiteLayout from "./site.astro";
// prettier-ignore (astro doesn't support expanded TS syntax)
export type Props = { title: string } | { frontmatter: { title: string } };
const title =
  "title" in Astro.props ? Astro.props.title : Astro.props.frontmatter.title;
if (!title) throw new Error("title is required in content-page layout");
import "../content-page.css";
---

<SiteLayout title={title}>
  <div class="page-content">
    <slot />
  </div>
</SiteLayout>

<style>
  .page-content {
    display: grid;
    grid-template-columns: 1fr minmax(40em, calc(100vw - 2em)) 1fr;
    margin: 5em 0;
    width: 40em;
    max-width: calc(100vw - 2em);
    display: flex;
    flex-direction: column;
    gap: 1.5em;
  }

  .page-content > :global(*) {
    margin: 0;
  }
</style>
